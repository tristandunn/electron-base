{
  "main"        : "index.js",
  "name"        : "electron-base",
  "author"      : "Tristan Dunn",
  "private"     : true,
  "version"     : "1.0.0",
  "description" : "A base for Electron applications with React.",
  "scripts"     : {
    "build"          : "npm run build-main && npm run build-renderer",
    "build-main"     : "NODE_ENV=production npm run webpack -- --config webpack.config.electron",
    "build-renderer" : "NODE_ENV=production npm run webpack -- --config webpack.config.production",
    "hot"            : "concurrently --kill-others \"npm run hot-server\" \"npm run hot-start\"",
    "hot-server"     : "node -r babel-register server.js",
    "hot-start"      : "HOT=1 NODE_ENV=development electron -r babel-register ./application/main",
    "lint"           : "eslint application test *.js && sass-lint -v",
    "package"        : "npm run prepare && npm run build && build --osx",
    "prepare"        : "node -r babel-register scripts/prepare",
    "test"           : "npm run test-renderer -s",
    "test-renderer"  : "NODE_ENV=test electron-mocha --renderer test/**/*.spec.js",
    "webpack"        : "node -r babel-register ./node_modules/webpack/bin/webpack --progress --profile --colors"
  },
  "dependencies" : {
    "react"                          : "15.1.0",
    "react-addons-pure-render-mixin" : "15.1.0",
    "react-dom"                      : "15.1.0",
    "react-redux"                    : "4.4.5",
    "react-router"                   : "2.5.0",
    "react-router-redux"             : "4.0.5",
    "redux"                          : "3.5.2"
  },
  "devDependencies" : {
    "babel-loader"                 : "6.2.4",
    "babel-plugin-resolver"        : "0.0.7",
    "babel-plugin-webpack-loaders" : "0.7.0",
    "babel-preset-es2015"          : "6.9.0",
    "babel-preset-react"           : "6.5.0",
    "babel-preset-stage-0"         : "6.5.0",
    "babel-register"               : "6.9.0",
    "chai"                         : "3.5.0",
    "concurrently"                 : "2.1.0",
    "css-loader"                   : "0.23.1",
    "devtron"                      : "1.2.1",
    "electron-builder"             : "5.6.2",
    "electron-debug"               : "1.0.1",
    "electron-mocha"               : "2.2.1",
    "electron-prebuilt"            : "1.2.5",
    "enzyme"                       : "2.3.0",
    "eslint"                       : "2.13.1",
    "eslint-plugin-react"          : "5.2.2",
    "express"                      : "4.14.0",
    "extract-text-webpack-plugin"  : "1.0.1",
    "fs-extra"                     : "0.30.0",
    "mocha"                        : "2.5.3",
    "node-sass"                    : "3.8.0",
    "react-addons-test-utils"      : "15.1.0",
    "react-hot-loader"             : "3.0.0-beta.2",
    "sass-lint"                    : "1.8.2",
    "sass-loader"                  : "3.2.1",
    "sinon"                        : "1.17.4",
    "style-loader"                 : "0.13.1",
    "webpack"                      : "1.13.1",
    "webpack-dev-middleware"       : "1.6.1",
    "webpack-hot-middleware"       : "2.10.0"
  },
  "build" : {
    "appId" : "com.yourname.electronbase",
    "mac"   : {
      "identity" : "Your Identiy Name",
      "target"   : ["dmg", "zip"]
    }
  },
  "directories" : {
    "app"    : "build",
    "output" : "release"
  }
}
